<UserControl
    x:Class="Bee.Modules.Script.Views.ScriptDebugger"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:Bee.Modules.Script.ViewModels"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    d:DataContext="{d:DesignInstance vm:ScriptDebuggerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/materialdesigntheme.button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/materialdesigntheme.combobox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/materialdesigntheme.textbox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>


    <DockPanel>
        <DockPanel VerticalAlignment="Top" Dock="Top">
            <ComboBox
                Margin="5"
                Padding="25,5"
                HorizontalAlignment="Stretch"
                ItemsSource="{Binding ActiveComs}"
                SelectedItem="{Binding SelectedCom}"
                materialDesign:HintAssist.Hint="选择连接器" />
            <ComboBox
                Margin="5"
                Padding="30,5"
                HorizontalAlignment="Left"
                ItemsSource="{Binding  ActivePorts}"
                SelectedItem="{Binding SelectedPort}"
                materialDesign:HintAssist.Hint="选择端口" >
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="DropDownOpened">
                        <prism:InvokeCommandAction Command="{Binding RefreshPortsCommand}"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </ComboBox>

                    <Button
                Margin="5"
                VerticalAlignment="Bottom"
                Style="{StaticResource MaterialDesignRaisedSecondaryButton}">
                <DockPanel>
                    <TextBlock VerticalAlignment="Center" Text="Import" />
                    <materialDesign:PackIcon
                        Margin="8,0,2,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Kind="FileImportOutline" />
                </DockPanel>
            </Button>
            <materialDesign:PopupBox
                Margin="8,5"
                DockPanel.Dock="Right"
                IsPopupOpen="{Binding IsOpenConfigBox}"
                PlacementMode="BottomAndAlignRightEdges"
                StaysOpen="True"
                ToolTip="查看已导入指令集">
                <materialDesign:PopupBox.ToggleContent>
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Foreground="{StaticResource SecondaryHueDarkBrush}"
                        Kind="PackageVariant" />
                </materialDesign:PopupBox.ToggleContent>

                <DockPanel>
                    <TextBlock
                        Margin="5,0,5,20"
                        DockPanel.Dock="Top"
                        Foreground="DarkCyan"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Text="设置" />
                    <DockPanel DockPanel.Dock="Top">
                        <Button Command="{Binding GetFolderPathCommand}" DockPanel.Dock="Right">
                            <materialDesign:PackIcon Kind="FolderOutline" />
                        </Button>
                        <TextBox
                            Margin="5"
                            HorizontalAlignment="Stretch"
                            FontSize="12"
                            Text="{Binding ScriptSavePath}" />

                    </DockPanel>


                    <StackPanel
                        Margin="100,10,0,10"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">
                        <Button
                            Command="{Binding SaveSettingCommand}"
                            Content="_配置"
                            FontSize="14" />
                        <Button
                            Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}"
                            Content="_取消"
                            FontSize="14" />
                    </StackPanel>
                </DockPanel>
            </materialDesign:PopupBox>
        </DockPanel>
        <UniformGrid Columns="2">
            <GroupBox Style="{StaticResource MaterialDesignCardGroupBox}"
                      materialDesign:ColorZoneAssist.Mode="Standard"
                      Margin="1 0"
            >
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="2,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                            Foreground="Gray"
                            Text="Editor" />
                        <Button
                            Margin="20,0 2 0"
                            materialDesign:RippleAssist.IsDisabled="True"
                            Command="{Binding DeleteInstructionCommand}"
                            Padding="3"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                            <materialDesign:PackIcon Kind="HammerScrewdriver" Height="20"  Width="20"/>
                        </Button>
                        <Button
                            Margin="2,0"
                            materialDesign:RippleAssist.IsDisabled="True"
                            Command="{Binding DeleteInstructionCommand}"
                            Padding="3"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                            <materialDesign:PackIcon Kind="DeleteOutline" Height="20"  Width="20"/>
                        </Button>
                        <Button
                            Margin="2,0"
                            materialDesign:RippleAssist.IsDisabled="True"
                            Command="{Binding DeleteInstructionCommand}"
                            Padding="3"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                            <materialDesign:PackIcon Kind="PlayOutline" Height="23"  Width="23"/>
                        </Button>
                    </StackPanel>
                </GroupBox.Header>
                <DockPanel>
                    <TextBox
                        BorderThickness="0"
                        AcceptsReturn="True"
                        FontSize="15"
                        Text="{Binding InstructionSet, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        />
                </DockPanel>
            </GroupBox>
            <GroupBox Style="{StaticResource MaterialDesignCardGroupBox}"
                      materialDesign:ColorZoneAssist.Mode="Standard"
                      Margin="1 0"
            >
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="2,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                            Foreground="Gray"
                            Text="Output Recorder" />
                        
                        <Button
                            Margin="25,0"
                            Padding="3"
                            materialDesign:RippleAssist.IsDisabled="True"
                            Command="{Binding DeleteInstructionCommand}"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                            <materialDesign:PackIcon Kind="DeleteOutline" Height="20"  Width="20"/>
                        </Button>
                     
                    </StackPanel>
                </GroupBox.Header>
                <RichTextBox
                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                    IsReadOnly="True"
                    BorderThickness="0"
                    VerticalScrollBarVisibility="Auto"
                    x:Name="ReceiveRichTextBox"
                    FontSize="15"
                />
            </GroupBox>
        </UniformGrid>
    </DockPanel>
</UserControl>
