<Window x:Class="ScriptEditorTest.ScriptConsole.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptEditorTest.ScriptConsole"
        mc:Ignorable="d"
        Title="ConsoleWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Visibility="Collapsed" DockPanel.Dock="Top">
            <TextBlock Text="Solution cmd console"  />
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom"  Orientation="Horizontal"  HorizontalAlignment="Right">
            <Button Content="start" Name="Start" Margin="5" Click="Start_OnClick"></Button>
            <Button Content="Clear"  Margin="5"></Button>
            <Button Content="Close" IsCancel="True"  Margin="5"/>
            <Button Content="Test" IsCancel="True"  Margin="5" Click="ButtonBase_OnClick"/>
        </StackPanel>
        <local:Console x:Name="Console"  ShowDiagnostics="True"  
                       FontSize="15"
                      FontStyle="Normal"
                       FontWeight="Black"
                       InputTextBrush="Black"/>
        

</DockPanel>
</Window>
